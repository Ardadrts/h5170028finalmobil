<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FilmDetayActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/imgKapak"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_list"
                app:srcCompat="@drawable/banner" />

            <TextView
                android:id="@+id/txtOyuncular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/filmdetay_baslik"
                android:textColor="@color/cardview_baslik"
                android:textSize="@dimen/card_textsizebaslik"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtOyuncuDetay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_padding_filmdetay"
                android:text="OYUNCUDETAY"
                android:textSize="@dimen/card_textsizeyazi" />

            <TextView
                android:id="@+id/txtBaslik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_padding_filmdetay"
                android:text="BAÅžLIK"
                android:textColor="@color/cardview_baslik"
                android:textSize="@dimen/card_textsizebaslik"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDetay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_padding_filmdetay"
                android:text="DETAY"
                android:textSize="@dimen/card_textsizeyazi" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>